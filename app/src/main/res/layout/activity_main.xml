<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/activity_main_layout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/encode"
        android:id="@+id/encodeBT"
        android:onClick="launchEncodeActivity"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/decodeBT"
        android:layout_alignStart="@+id/decodeBT"
        android:layout_marginTop="58dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decode"
        android:id="@+id/decodeBT"
        android:onClick="lauchDecodeActivity"
        android:layout_below="@+id/encodeBT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:id="@+id/infoBT"
        android:onClick="showInfo"
        android:layout_below="@+id/settingsBtn"
        android:layout_alignRight="@+id/settingsBtn"
        android:layout_alignEnd="@+id/settingsBtn"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings"
        android:id="@+id/settingsBtn"
        android:onClick="launchSettingsActivity"
        android:layout_below="@+id/decodeBT"
        android:layout_alignLeft="@+id/decodeBT"
        android:layout_alignStart="@+id/decodeBT"
        android:layout_marginTop="65dp" />

</RelativeLayout>
